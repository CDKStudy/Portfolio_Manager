{
  "name": "portfolio-manager-backend",
  "version": "1.0.0",
  "description": "Portfolio Manager REST API",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "test": "jest",
    "db:setup": "mysql -u root -p < database/setup.sql",
    "db:reset": "mysql -u root -p -e \"DROP DATABASE IF EXISTS portfolio_manager; CREATE DATABASE portfolio_manager;\" && npm run db:setup"
  },
  "keywords": ["portfolio", "finance", "api"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "mysql2": "^3.6.0",
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "yahoo-finance2": "^2.8.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.8.0",
    "typescript": "^5.2.2",
    "ts-node-dev": "^2.0.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.5"
  }
} 